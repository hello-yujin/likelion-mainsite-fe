{
    "compilerOptions": {
        "jsx": "react-jsx", 
        "checkJs": true,
        "baseUrl": ".",
        "paths": {
            "@/*": ["src/*"] 
        },
        "types": ["vite/client"]
    },
    "include": [
        "src/**/*.d.ts", 
        "src/**/*.js",    
        "src/**/*.jsx",   
        "src/**/*.ts"
    ],
    "exclude": [
        "node_modules",  
        "**/node_modules",  
        "dist"
    ]
}